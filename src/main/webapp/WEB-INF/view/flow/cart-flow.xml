<view-state id="collectCustomerInfo" view="Shippinginfo.jsp" model="cart">
<transition on="submit" to="orderConfirmation" />
<transition on="backToCollectCustomerInfo" to="collectCustomerInfo" />
</view-state>
 

<view-state id="orderConfirmation" view="Confirmorder.jsp" model="cart">
<transition on="submit" to="saveOrder" />
<transition on="backToCollectCustomerInfo" to="collectCustomerInfo" />
</view-state>

<action-state id="saveOrder">
<evaluate expression="cartDAOImpl.updateCart(cart)" result="cart"></evaluate>
<transition to="InvalidCartWarning" on-exception="java.lang.NullPointerException" />
<transition to="processOrder"  />
</action-state>

<view-state id="processOrder" view="Thankyou.jsp">
<transition on="submit" to="thankCustomer" />
<transition on="backToCollectCustomerInfo" to="collectCustomerInfo" />
</view-state>

<view-state id="thankCustomer" model="cart">
<transition to="endState" />
</view-state>

<end-state id="endState" />

<view-state id="invalidCartWarning">
<transition to="endState" />
</view-state>

<end-state id="cancelCheckout" view="checkOutCancelled.jsp" />

<global-transitions>
<transition on="cancel" to="cancelCheckout" />
</global-transitions>
	
	
	             
                          </flow>